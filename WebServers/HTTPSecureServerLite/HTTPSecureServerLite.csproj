<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
	<DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
	<DockerfileRunArguments>-p 443:443</DockerfileRunArguments>
    <ApplicationIcon>HTTPS.ico</ApplicationIcon>
	<ServerGarbageCollection>true</ServerGarbageCollection>
	<PublishSingleFile>false</PublishSingleFile> <!-- Single mode cannot load plugins due to no assembly loading support. -->
  </PropertyGroup>

  <ItemGroup>
    <Content Include="HTTPS.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Costura.Fody" Version="5.7.0">
      <PrivateAssets>all</PrivateAssets>
      <!--<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>-->
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.20.1" />
    <PackageReference Include="Watson.Lite" Version="6.1.10" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\BackendServices\AuxiliaryServices\WebAPIService\WebAPIService.csproj" />
    <ProjectReference Include="..\..\BackendServices\TechnitiumLibrary.Net.Firewall\TechnitiumLibrary.Net.Firewall.csproj" />
  </ItemGroup>
 
  <ItemGroup>
    <Content Include="static\**\*.*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>  
  </ItemGroup>

  <Target Name="PostPublishCleanup" AfterTargets="AfterBuild">
	<ItemGroup>
        <FilesToRemove Include="$(OutDir)$(ProjectName).deps.json" />
    </ItemGroup>

    <PropertyGroup>
        <FilesExist Condition="Exists(@(FilesToRemove))">true</FilesExist>
    </PropertyGroup>

    <Delete Files="@(FilesToRemove)" Condition="$(FilesExist)" />
	
	<!-- HTTPSÂ¨Plugins needs the deps.json still, so we copy a fixed version.
		 We need this because Costura.Fody compresses local depenendies, and 
		 the deps.json still has them referenced which trips docker. -->
	
    <WriteLinesToFile
        File="$(OutDir)$(ProjectName).deps.json"
        Lines="$([System.IO.File]::ReadAllText(HTTPSecureServerLite.deps.patch))"
        Encoding="UTF-8"/>
  </Target>

</Project>
