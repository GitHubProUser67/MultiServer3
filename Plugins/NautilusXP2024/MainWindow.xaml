<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Nautilus Toolset v1.00 by Home Laboratory" Height="700" Width="1210" MaxHeight="700" MaxWidth="1210"
        ResizeMode="NoResize" WindowStyle="None" Background="#333333"
        BorderBrush="#000000"
                BorderThickness="1">
    <Window.Resources>
        <!-- ... Other styles ... -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        <Style x:Key="RoundThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NoFocusChangeTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="BorderBrush" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DarkModeButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MaxWidth" Value="150"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Background" Value="#282828"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5,10,5,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#000000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <!-- Border for the shadow effect -->
                            <Border x:Name="ShadowBorder" CornerRadius="5" Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#151515" BlurRadius="5" Opacity="0.5" ShadowDepth="3" Direction="315"/>
                                </Border.Effect>
                            </Border>
                            <!-- ContentPresenter for the content, including the border -->
                            <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                                <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"
                                          Margin="8,4,8,4" RenderTransformOrigin="0.5,0.5">
                                    <ContentPresenter.RenderTransform>
                                        <TranslateTransform x:Name="TranslateTransform"/>
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#222222"/>
                                <Setter Property="BorderBrush" Value="#000000"/>
                                <!-- Move the content and border down by 2 pixels when pressed -->
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1" X="1"/>
                                    </Setter.Value>
                                </Setter>
                                <!-- Adjust the shadow effect when pressed -->
                                <Setter TargetName="ShadowBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#151515" BlurRadius="2" Opacity="0.5" ShadowDepth="1" Direction="315"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#101010"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkModeButtonSmallStyle" TargetType="Button">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Background" Value="#282828"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#000000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <!-- Border for the shadow effect -->
                            <Border x:Name="ShadowBorder" CornerRadius="5" Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#151515" BlurRadius="5" Opacity="0.5" ShadowDepth="3" Direction="315"/>
                                </Border.Effect>
                            </Border>
                            <!-- ContentPresenter for the content, including the border -->
                            <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                                <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           RenderTransformOrigin="0.5,0.5">
                                    <ContentPresenter.RenderTransform>
                                        <TranslateTransform x:Name="TranslateTransform"/>
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#222222"/>
                                <Setter Property="BorderBrush" Value="#000000"/>
                                <!-- Move the content and border down by 2 pixels when pressed -->
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1" X="1"/>
                                    </Setter.Value>
                                </Setter>
                                <!-- Adjust the shadow effect when pressed -->
                                <Setter TargetName="ShadowBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#151515" BlurRadius="2" Opacity="0.5" ShadowDepth="1" Direction="315"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Margin" Value="-10,0,5,0"/>
            <Setter Property="Background" Value="#383838"/>
            <Setter Property="BorderBrush" Value="#000000"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" 
                      VerticalAlignment="{TemplateBinding VerticalAlignment}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="RadioButtonBorder" Width="26" Height="26" CornerRadius="13" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Margin="4" VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF444444" BlurRadius="5" Opacity="0.9" ShadowDepth="2" Direction="315"/>
                                </Border.Effect>
                                <Ellipse x:Name="CheckMark" Fill="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                 Width="13" Height="13" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" Content="{TemplateBinding Content}"
                                      Margin="{TemplateBinding Padding}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="BorderBrush" Value="#000000"/>
                                <Setter TargetName="RadioButtonBorder" Property="Opacity" Value="1"/>
                                <Setter TargetName="RadioButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="1" Y="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="RadioButtonBorder" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter TargetName="RadioButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#1E1E1E" BlurRadius="2" Opacity="0" ShadowDepth="0" Direction="315"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="RadioButtonBorder" Property="BorderThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#000000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF888888"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="#FF444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ModernToggleSwitchStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Margin" Value="5,0,15,0"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Border x:Name="toggleBorder" Width="{TemplateBinding Width}" 
                        Height="{TemplateBinding Height}" 
                        CornerRadius="2" 
                        Background="Transparent">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF444444" BlurRadius="2" Opacity="0.5" ShadowDepth="2" Direction="315"/>
                            </Border.Effect>
                            <Grid>
                                <!-- Adjusted Rectangle with a Stroke for the border -->
                                <Rectangle x:Name="toggleRectangle" Fill="#1E1E1E" RadiusX="13" RadiusY="14" Stroke="#000000" StrokeThickness="1"/>
                                <Ellipse x:Name="SwitchThumb" Fill="#FF767676" 
                                 Width="18" Height="18" 
                                 HorizontalAlignment="Left" 
                                 Margin="2.5"
                                 VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="SwitchThumb" Property="Margin" Value="0,2.5,2.5,2.5"/>
                                <Setter TargetName="SwitchThumb" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="toggleRectangle" Property="StrokeThickness" Value="2.5"/>
                                <Setter TargetName="toggleRectangle" Property="Stroke" Value="#101010"/>
                                <Setter TargetName="toggleRectangle" Property="Fill" Value="#1E1E1E"/>
                                <Setter Property="Background" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                <Setter TargetName="SwitchThumb" Property="Fill" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                <!-- Apply transform and drop shadow effect changes to the entire Border -->
                                <Setter TargetName="toggleBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="0" Y="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="toggleBorder" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter TargetName="toggleBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF444444" BlurRadius="1" Opacity="0.5" ShadowDepth="1" Direction="315"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#333333"/>
                                <Setter TargetName="SwitchThumb" Property="Fill" Value="#FF888888"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- You can add setters here for when the mouse is over the toggle switch -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Style for the ScrollBar itself -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Track Name="PART_Track" IsDirectionReversed="true">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource RoundThumbStyle}" />
                            </Track.Thumb>
                        </Track>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="8"/>
                    <Setter Property="Width" Value="Auto"/>
                    <!-- Ensure the Thumb has appropriate width for horizontal scrollbar -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Track Name="PART_Track" IsDirectionReversed="False" Orientation="Horizontal">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource RoundThumbStyle}" Width="Auto" Height="10"/>
                                    </Track.Thumb>
                                </Track>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Height" Value="Auto"/>
                    <!-- Ensure the Thumb has appropriate height for vertical scrollbar -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Track Name="PART_Track" IsDirectionReversed="true" Orientation="Vertical">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource RoundThumbStyle}" Width="10" Height="Auto"/>
                                    </Track.Thumb>
                                </Track>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="TabItemBorder" Background="{TemplateBinding Background}" BorderBrush="#333333" BorderThickness="1.5">
                                <Grid>
                                    <ContentPresenter x:Name="ContentSite"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      ContentSource="Header"
                                      Margin="12,2,15,6"
                                      
                                      TextBlock.FontWeight="Normal"
                                      Opacity="1"/>
                                    <ContentPresenter x:Name="ContentSiteBold"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      ContentSource="Header"
                                      Margin="12,0,15,6"
                                      
                                      TextBlock.FontWeight="bold"
                                      Opacity="0"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ContentSite" Property="Opacity" Value="0"/>
                                <Setter TargetName="ContentSiteBold" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                <Setter TargetName="TabItemBorder" Property="BorderBrush" Value="#000000"/>
                                <Setter TargetName="TabItemBorder" Property="Background" Value="#292929"/>
                                <!-- Move text down and to the right -->
                                <Setter TargetName="ContentSiteBold" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="2" Y="2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ContentSiteBold" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Your existing setters for IsMouseOver -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToolTitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SmallTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>

        <Style x:Key="SmallTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#C0BFBF"/>
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>
        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
        <Style x:Key="FileListTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#C0BFBF"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="0.0"/>
            <Setter Property="BorderBrush" Value="white"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Height" Value="290"/>
            <Setter Property="Width" Value="540"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
        <Style x:Key="TitleBarButtonHoverStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <!-- Set to your preferred hover background color -->
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Sha1TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Padding" Value="0,3,0,0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="ArchiveFormatTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="0,10,5,10"/>
            <Setter Property="Padding" Value="0,3,0,0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="Toggle1TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,10,5,10"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="SceneIdTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="white"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SceneIdInputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0.0"/>
            <Setter Property="Foreground" Value="#C0BFBF"/>
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>
        <Style x:Key="SceneIdTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0.0"/>
            <Setter Property="Foreground" Value="#C0BFBF"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
        <Style x:Key="Sha1TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="7"/>
            <Setter Property="Padding" Value="0,3,0,0"/>
            <Setter Property="BorderThickness" Value="0.0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#C0BFBF"/>
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>
        <Style x:Key="SettingsTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="BorderThickness" Value="0.0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#C0BFBF"/>
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>
        <Style x:Key="DragAreaStyle" TargetType="Border">
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="Padding" Value="5,5,5,5"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="BorderBrush" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Background" Value="#1E1E1E"/> 
        </Style>
        <Style x:Key="DragAreaStyle2" TargetType="Border">
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Width" Value="480"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="5,5,5,10"/>
            <Setter Property="Padding" Value="5,5,5,5"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="BorderBrush" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>
        <Style x:Key="DragAreaTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="gray"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation Duration="0:0:0.2" To="0" Storyboard.TargetProperty="Opacity" />
        </Storyboard>

        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Duration="0:0:0.2" To="1" Storyboard.TargetProperty="Opacity" />
        </Storyboard>
        <Storyboard x:Key="InitialFadeInStoryboard">
            <DoubleAnimation Duration="0:0:0.2" To="1" Storyboard.TargetProperty="Opacity" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Custom Title Bar -->
        <Grid Background="Transparent" Height="33" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Space for the icon -->
                <ColumnDefinition Width="*"/>
                <!-- Space for the title -->
                <ColumnDefinition Width="Auto"/>
                <!-- Space for the window control buttons -->
            </Grid.ColumnDefinitions>

            <!-- Icon Image -->
            <Image Grid.Column="0" Source="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=Icon}" Height="20" Width="20" Margin="5,0,0,0" VerticalAlignment="Center"/>

            <!-- Window Title -->
            <TextBlock Grid.Column="1" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=Title}" VerticalAlignment="Center" HorizontalAlignment="Left" 
                   Foreground="White" FontWeight="Bold" FontSize="12" Margin="10,0,0,0"/>

            <!-- Custom Window Control Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Minimize Button -->
                <Button FontFamily="Segoe MDL2 Assets" Content="&#xE921;" Click="Minimize_Click" 
                Width="24" Height="24" FontSize="10" BorderBrush="Transparent" Margin="0,0,10,0" Background="Transparent" Foreground="White"/>
                <!-- Maximize Button -->
                <Button FontFamily="Segoe MDL2 Assets" Content="&#xE922;" Click="Maximize_Click" 
                Width="24" Height="24" FontSize="10" BorderBrush="Transparent" Margin="0,0,10,0" Background="Transparent" Foreground="White"/>
